<%- include('header'); -%>
<div class="row">
    <div class="col-md-3" style="background-color: rgb(255, 255, 255);">
        <ul class="list-group">
            
            <% cat.forEach(element => {%>
                <li class="list-group-item d-flex justify-content-between align-items-center border-end-0 border-start-0"><%=element.name  %>
                    <span class="badge bg-primary rounded-pill"><%=element.quantity %> </span>
                </li>
            <% }); %> 
        </ul>
    </div>
    <div class="col-md-9" style="background-color: rgb(255, 255, 255);">
        <div class="row row-cols-auto d-flex justify-content-center">
            <% items.forEach(item=> { %>
                <div class="col" style="margin-bottom: 24px;">
                    <div class="card" style="width: 13rem;">
                        <img class="prod-img" src=<%=item.img %> alt="">
                        <div class="card-body">
                            <h6 class="card-title" style="text-align: center;">
                                <% if(item.name.length>20){ %>
                                    <%=item.name.substring(0, 30) + "...." %> 
                                <% }else{ %>
                                    <%=item.name %> 
                                <% } %> 
                                
                            </h6>
                            <p class="card-text">
                                <%=item.Brand %>
                            </p>
                            <p class="card-text">
                                â‚¹ <%=item.sellingPrice %>
                            </p>
                            <div class="d-grid gap-2">
                                <a href="#" class="btn btn-success btn-block">Add to Cart</a>
                                <a href="#" class="btn btn-warning btn-block">Buy Now</a>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>   
        </div>
    </div>
</div>

<%- include('footer'); -%>

