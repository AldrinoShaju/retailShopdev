<%- include('header'); -%>
<p><%=product[0].category %>-><%=product[0].name %></p>
<div class="container">
    <div class="row">
        <div class="col-md-6 pic d-flex justify-content-center"> 
            <img class="prod-detail-img" src=<%=product[0].img  %>  alt="">    
        </div>
        <div class="col-md-6 desc">
            <h2><%=product[0].name %> </h2>
            <h4><%=product[0].Brand %></h4>
            <h6><%=product[0].sellingPrice %></h6>
            <div class="d-grid gap-2">
                <button class="btn btn-primary" type="button">Buy Now</button>
                <button class="btn btn-primary" type="button">Add to Cart</button>
            </div>
        </div>
    </div>
</div>
<%- include('footer'); -%>